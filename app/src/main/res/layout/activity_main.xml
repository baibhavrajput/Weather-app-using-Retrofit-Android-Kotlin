<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/etSearchCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Enter city name"
                />

            <Button
                android:id="@+id/btGetWeatherReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Weather Report" />

            <TextView
                android:id="@+id/tvCloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvFeelsLikeC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvFeelsLikeF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvHumidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvIsDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvPrecipIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvPrecipMm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvPressureIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvPressureMb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvTempC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvTempF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvUv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvWindDegree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvWindDir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvWindKph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                />



        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>